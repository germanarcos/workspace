import java.util.Scanner;

public class Ejercicio10 {
	public static void ejercicio10(){
		Scanner scanner = new Scanner(System.in);
		int NUM_CARTAS = 39;
		int num;
		char decision;
		String numero = "";
		String palo = "";
		int[] cartas = new int[NUM_CARTAS];
		for(int i=0;i<NUM_CARTAS;i++){
			cartas[i] = 0;

		}
		do{//Seleccionar que hacer
			System.out.println("Introduce S para sacar una carta, R para reiniciar la baraja y Q para salir");
			decision = scanner.next().charAt(0);
			if(decision =='s' || decision =='S'){
				//Sacar un numero aleatorio y comprobar que la carta no está repetida
				do{
					num = (int)Math.floor(Math.random()*(-39)+39);
				}while(cartas[num]==1);
				switch(num%10){
				case 0:
					numero = "As";
					break;
				case 1:
					numero = "Dos";
					break;
				case 2:
					numero = "Tres";
					break;
				case 3:
					numero = "Cuatro";
					break;
				case 4:
					numero = "Cinco";
					break;
				case 5:
					numero = "Seis";
					break;
				case 6:
					numero = "Siete";
					break;
				case 7:
					numero = "Sota";
					break;
				case 8:
					numero = "Caballo";
					break;
				case 9:
					numero = "Rey";
					break;
				}//fin Switch
				switch(num/10){
				case 0:
					palo = "Oros";
					break;
				case 1:
					palo = "Copas";
					break;
				case 2:
					palo = "Espadas";
					break;
				case 3:
					palo = "Bastos";
					break;
				}
				System.out.println("Has sacado el " + numero + " de " + palo);
			}
		}while (decision != 'Q' && decision != 'q');

	}
}

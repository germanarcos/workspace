import java.util.Scanner;
public class main {

	public static void main(String[] args) {

		int lado;
		int casillas;
		int barcos;
		Scanner teclado = new Scanner(System.in);
		System.out.println("Introduce el lado del cuadrado que formará el tablero:");
		
		//Introducir un lado válido
		do{
			lado = teclado.nextInt();
			if(lado>10){
				System.out.println("No introduzcas un lado mayor que 10.");
			}else if(lado<=0){
				System.out.println("No introduzcas un número negativo o 0.");
			}
		}while(lado>10 || lado<=0);
		casillas = lado*lado;
		String[] tablero = new String [casillas];
		for(int i=0;i<casillas;i++){
			tablero[i] =" * ";
		}
		do{
			System.out.println("Introduce el número de casillas que quieres que estén ocupadas");
			barcos = teclado.nextInt();
			teclado.nextLine();
		}while(barcos>=casillas || barcos<=0);
		for(int i = 0;i<casillas;i++){
			if(i%lado==0){
				System.out.println();
			}
			System.out.print(tablero[i]);
		}
		
		

	}//fin método main

}
